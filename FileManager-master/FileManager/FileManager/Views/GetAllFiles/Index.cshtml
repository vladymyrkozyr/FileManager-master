@model IEnumerable<FileManager.Models.FilePathUserNameEmail>
@{
    ViewBag.Title = "Index";
}
<h2>All Files</h2>

<table>
    <tr>
        <th>File Name</th>
        <th>User Name</th>
        <th>E-mail</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Path.GetFileName(item.FilePath)</td>
            <td>@item.UserName</td>
            <td>@item.UserEmail</td>
            <td>
                <div class="btn btn-default">@Html.ActionLink("Download", "Download", new { filePath = item.FilePath })</div>
            </td>

            <td>
                <div class="btn btn-default">@Html.ActionLink("Delete", "DeleteFile", new { id = item.FileId })</div>
            </td>

        </tr>
    }
</table>